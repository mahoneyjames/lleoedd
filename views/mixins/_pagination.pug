mixin pagigation(page, pages, count)
    .pagination
        .pagination__prev
            if page > 1
                a(href=`/places/page/${page-1}`) Prev
        .pagination__text
            p Page #{page} of #{pages} - #{count} total results
        .pagination__next
            if page < pages
                a(href=`/places/page/${parseFloat(page) +1}`) Next