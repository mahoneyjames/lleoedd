extends layout
include mixins/_placeDetails
include mixins/_placeEditNav
block content   
    //-pre=h.dump(place)
    .page-header
        h2.title.title--single #{localise(place.name)}
    +placeEditNav(place,"details")
    .main-card
        //- pre=h.dump(place)
        //- pre=h.dump(validationErrors)
        form(action=url(`places/${place._id}/editDetails`) method="POST" class="" )                  
            +placeDetails(place)
            input.btn.btn-primary(type="submit" value=`${label('page.place.add.save')}` class="button")